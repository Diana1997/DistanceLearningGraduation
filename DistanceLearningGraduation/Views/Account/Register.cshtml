@model DistanceLearningGraduation.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="modal-content bg">
    <div class="content">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2>Գրանցվել</h2>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group" style="margin-bottom: 45px;">
                <div class="col-md-10 inputDiv">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Էլեկտրոնային փոստ" })
                </div>
            </div>
            <div class="form-group" style="margin-bottom: 45px;">
                <div class="col-md-10 inputDiv">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = " Գաղտնաբառ" })
                </div>
            </div>
            <div class="form-group " style="margin-bottom: 45px;">
                <div class="col-md-10 inputDiv">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Կրկնել գաղտնաբառը" })
                </div>
            </div>
            <div class="form-group" style="margin-bottom: 45px;">
                <label class="col-md-2 control-label" style="    margin-left: 25px; margin-top: -24px; width: 86px;"> Ընտրել դերը</label>
                <div class="col-md-10" style="    margin-left: 204px;
    margin-top: -40px;">
                    @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, " ", htmlAttributes: new { @class = "comboStyle" })
                </div>
            </div>
            <div class="form-group" style="    margin-left: 9px;
    width: 99px;
    margin-top: -16px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="login loginmodal-submit" value="Գրանցվել" style="    width: 284px;
    margin-left: -15px;
    margin-top: -21px;" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<link rel="stylesheet" type="text/css" href="~/Content/login.css" />
