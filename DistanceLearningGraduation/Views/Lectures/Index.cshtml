@model IEnumerable<DistanceLearningGraduation.Models.Lecture>

@{
    ViewBag.Title = "Index";
}

<h2>Դասախոսություններ</h2>

<button class="btn btn-success btn-m-top">
    @Html.ActionLink("Ավելացնել նորը", "Create", "Lectures",htmlAttributes: new { @class = "linkStyle" })
</button>
<table class="table table-hover tbl-margin">
    <thead class="thead-style">
        <tr>
            <th> 
                Բաժին
            </th>
            <th>
                Առարկա
            </th>
            <th>
                Դասախոսություն
            </th>
            <th>
                Հղումներ
            </th>
            <th></th>
        </tr>
</thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lesson.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Links)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.LectureID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.LectureID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.LectureID })*@

                    <a href="@Url.Action("Edit", "Lectures", new { id = item.LectureID })"
                       class="btn btn-primary btn-xs">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    |
                    <a href="@Url.Action("Details", "Lectures", new { id = item.LectureID })"
                       class="btn btn-success btn-xs">
                        <span class="glyphicon glyphicon-list"></span>
                    </a>
                    |
                    <a href="@Url.Action("Delete", "Lectures", new { id = item.LectureID })"
                       class="btn btn-danger btn-xs">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }

</table>

<link rel="stylesheet" type="text/css" href="~/Content/adminStyle.css" />