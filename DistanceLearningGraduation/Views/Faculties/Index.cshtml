@model IEnumerable<DistanceLearningGraduation.Models.Faculty>

@{
    ViewBag.Title = "Index";
}

<h2>Ֆակուլտետներ</h2>

<p>
    @Html.ActionLink("Ավելացնել նորը", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Փոփոխել", "Edit", new { id=item.FacultyID }) |
            @Html.ActionLink("Մանրամասն", "Details", new { id=item.FacultyID }) |
            @Html.ActionLink("Ջնջել", "Delete", new { id=item.FacultyID })
        </td>
    </tr>
}

</table>
